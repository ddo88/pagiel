extends layout
block css
 link(rel="stylesheet",href="/javascripts/revealjs/css/reveal.css")
 link(rel="stylesheet",href="/javascripts/revealjs/css/theme/white.css",id="theme")
 link(rel="stylesheet",href="/javascripts/revealjs/lib/css/zenburn.css")
block content
 .reveal
  .slides(data-bind='foreach:files,visible: files().length')
   section(data-markdown,class="stretch",data-separator-vertical="^\r")
    textarea(data-bind="text:transposeChord(chords(),tono())",data-template)
  
block scripts
 script(src="/javascripts/revealjs/lib/js/head.min.js")
 script(src="/javascripts/revealjs/js/reveal.js")
 script(src='/javascripts/presentationChords.js')